<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="wanzhi.gulu.community.mapper.CommentExtMapper" >
  <resultMap id="BaseResultMap" type="wanzhi.gulu.community.model.Comment">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="type" jdbcType="INTEGER" property="type" />
    <result column="target_id" jdbcType="BIGINT" property="targetId" />
    <result column="commentator" jdbcType="BIGINT" property="commentator" />
    <result column="content" jdbcType="VARCHAR" property="content" />
    <result column="like_count" jdbcType="BIGINT" property="likeCount" />
    <result column="tread_count" jdbcType="BIGINT" property="treadCount" />
    <result column="comment_count" jdbcType="BIGINT" property="commentCount" />
    <result column="hot" jdbcType="BIGINT" property="hot" />
    <result column="gmt_create" jdbcType="BIGINT" property="gmtCreate" />
    <result column="gmt_modified" jdbcType="BIGINT" property="gmtModified" />
  </resultMap>
  <update id="incCommentCount" parameterType="wanzhi.gulu.community.model.Comment" >
    update comment
    set comment_count = comment_count + #{commentCount,jdbcType=BIGINT}
    where id = #{id}
  </update>
  <update id="incHot" parameterType="wanzhi.gulu.community.dto.HotDTO" >
    update comment
    set hot = hot + #{incHotCount,jdbcType=BIGINT}
    where id = #{id}
  </update>
  <update id="incPraise" parameterType="wanzhi.gulu.community.dto.PraiseDTO" >
    update comment
    set praise_count = praise_count + #{praiseCount,jdbcType=BIGINT}
    where id = #{id}
  </update>
  <update id="redPraise" parameterType="wanzhi.gulu.community.dto.PraiseDTO" >
    update comment
    set praise_count = praise_count - #{praiseCount,jdbcType=BIGINT}
    where id = #{id}
  </update>
</mapper>